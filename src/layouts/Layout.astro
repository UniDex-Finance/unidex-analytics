---
import { Separator } from "@/components/ui/separator";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="black">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Analytics Dashboard for The Most Powerful Aggregation Layer in DeFi, UniDex"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 bg-[url(/blur.svg)] min-h-screen bg-cover py-4 px-4">
    <div class="mx-auto w-full">
      <header class="py-2 md:py-5 px-6 md:px-10 rounded-lg outline outline-1 outline-slate-700 bg-opacity-10 bg-slate-500 shadow-lg flex items-center">
        <a href="https://leverage.unidex.exchange" class="flex items-center w-fit mx-auto md:mx-0 gap-4" rel="noopener noreferrer" target="_blank">
          <Image src={logo} alt="UniDex Logo" width="147" height="50" class="scale-75 md:scale-100" />
          <Separator orientation="vertical" className="h-12" />
          <div class="flex justify-start pl-5 ">
            <p class="uppercase text-sm md:text-md">Analytics</p>
            <a href="https://docs.unidex.exchange" class="uppercase text-sm md:text-md ml-2 pl-5" >Docs</a>
            <a href="https://pool.unidex.exchange" class="uppercase text-sm md:text-md ml-2 pl-5" >Pool Liquidity</a>

          </div>
        </a>
      </header>
      <slot />
    </div>
  </body>
</html>